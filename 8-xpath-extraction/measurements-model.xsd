<?xml version="1.0" encoding="iso-8859-1"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <!-- Aufbau eines XSD-Stufenmodells -->
  <!-- Autor: W. Schubert, Stand 27.09.2013 -->
  <!-- GLOBALE DEKLARATIONEN -->
  <!-- Einfache Typen -->
  <xs:simpleType name="dimension">
    <xs:restriction base="xs:string">
      <xs:enumeration value="Stunden" />
      <xs:enumeration value="Min" />
      <xs:maxLength value="7" />
      <xs:minLength value="1" />
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="mw_nr">
    <xs:restriction base="xs:unsignedByte">
      <xs:minInclusive value="1" />
      <xs:maxInclusive value="10" />
    </xs:restriction>
  </xs:simpleType>
  <!-- Komplexe Typen -->
  <xs:complexType name="prueferdaten">
    <xs:sequence />
    <xs:attribute name="pers_id" type="xs:ID" />
    <xs:attribute name="email" type="xs:string" />
    <xs:attribute name="pr_name" type="xs:string" />
  </xs:complexType>
  <!-- Deklaration untergeordneter Elemente -->
  <xs:element name="prueferdaten" type="prueferdaten">
  </xs:element>
  <xs:element name="arbeitszeit">
    <xs:complexType>
      <xs:simpleContent>
        <xs:extension base="xs:decimal">
          <xs:attribute name="dimension" type="dimension" use="required" />
        </xs:extension>
      </xs:simpleContent>
    </xs:complexType>
  </xs:element>
  <xs:element name="artikel">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="art_bezeichnung" type="xs:string" />
      </xs:sequence>
      <xs:attribute name="artikel_id" type="xs:ID" />
      <xs:attribute name="zeichnungs_nr" type="xs:string" />
    </xs:complexType>
  </xs:element>
  <xs:element name="pruefplandaten">
    <xs:complexType>
      <xs:sequence />
      <xs:attribute name="ppl_id" type="xs:ID" />
    </xs:complexType>
  </xs:element>
  <xs:element name="lieferantendaten">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="lieferantenname" type="xs:string" />
      </xs:sequence>
      <xs:attribute name="lief_id" type="xs:ID" />
    </xs:complexType>
  </xs:element>
  <!-- Deklaration der Artikeldaten -->
  <xs:element name="artikeldaten">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="artikel" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <!-- Deklaration der Kopfdaten -->
  <xs:element name="kopfdaten">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="prueferdaten" />
        <xs:element ref="arbeitszeit" />
        <xs:element ref="artikeldaten" />
        <xs:element ref="pruefplandaten" />
        <xs:element ref="lieferantendaten" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="pruefmerkmal">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="pm_wert" minOccurs="1" maxOccurs="10" />
        <xs:element name="pm_mittelwert" type="xs:double" />
      </xs:sequence>
      <xs:attribute name="pm_name" type="xs:string" />
      <xs:attribute name="pm_dimension" type="xs:string" />
    </xs:complexType>
  </xs:element>
  <xs:element name="pm_wert">
    <xs:complexType>
      <xs:simpleContent>
        <xs:extension base="xs:decimal">
          <xs:attribute name="lfd_nr" type="xs:int" />
        </xs:extension>
      </xs:simpleContent>
    </xs:complexType>
  </xs:element>
  <!-- Deklaration der Messwertdaten -->
  <xs:element name="messwertdaten">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="pruefmerkmal" minOccurs="1" maxOccurs="unbounded" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <!-- Deklaration der Pruefergebnis-Daten (geschachtelt) -->
  <xs:element name="pruefergebnis">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="bemerkungen" type="xs:string" />
        <xs:element name="nacharbeitsdatum">
          <xs:complexType>
            <xs:simpleContent>
              <xs:extension base="xs:string">
                <xs:attribute name="format" type="xs:string" />
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
      <xs:attribute name="einstufung">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:enumeration value="Gut" />
            <xs:enumeration value="Schlecht" />
            <xs:enumeration value="Nacharbeit" />
          </xs:restriction>
        </xs:simpleType>
      </xs:attribute>
    </xs:complexType>
  </xs:element>
  <!-- Deklaration der Stufe unter Root-Element -->
  <!-- bestehend aus den drei Teilen Kopfdaten, Messwertdaten und Prueferebnis -->
  <xs:element name="messbericht">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="kopfdaten" />
        <xs:element ref="messwertdaten" />
        <xs:element ref="pruefergebnis" />
      </xs:sequence>
      <xs:attribute name="mb_id" type="xs:ID" use="required" />
      <xs:attribute name="pruefdatum" type="xs:string" use="required" />
    </xs:complexType>
  </xs:element>
  <!-- Deklaration des Root-Elementes -->
  <xs:element name="messberichte">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="messbericht" minOccurs="1" maxOccurs="unbounded" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>